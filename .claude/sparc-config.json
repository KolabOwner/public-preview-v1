{
  "project": {
    "name": "Hirable AI Resume Analysis Service",
    "version": "2.0.0",
    "description": "AI-powered resume analysis and optimization platform with RMS metadata compliance",
    "repository": "https://github.com/your-org/hirable-ai",
    "license": "MIT"
  },

  "sparc": {
    "version": "1.0.0",
    "mode": "advanced",
    "phases": {
      "specification": {
        "enabled": true,
        "templates": {
          "feature": ".claude/templates/feature-spec.md",
          "bugfix": ".claude/templates/bugfix-spec.md",
          "refactor": ".claude/templates/refactor-spec.md"
        },
        "research": {
          "enabled": true,
          "depth": "comprehensive",
          "sources": ["documentation", "codebase", "dependencies", "similar-projects"],
          "maxSearches": 10
        },
        "requirements": {
          "functional": true,
          "nonFunctional": true,
          "constraints": true,
          "acceptance": true
        }
      },

      "pseudocode": {
        "enabled": true,
        "style": "structured",
        "detail": "high",
        "includeTypes": true,
        "includeErrors": true,
        "validation": {
          "logic": true,
          "complexity": true,
          "patterns": true
        }
      },

      "architecture": {
        "enabled": true,
        "diagrams": {
          "system": true,
          "component": true,
          "sequence": true,
          "data": true,
          "deployment": true
        },
        "patterns": [
          "microservices",
          "event-driven",
          "serverless",
          "repository",
          "factory",
          "observer"
        ],
        "documentation": {
          "decisions": true,
          "tradeoffs": true,
          "alternatives": true
        }
      },

      "refinement": {
        "enabled": true,
        "iterations": 3,
        "feedback": {
          "automated": true,
          "manual": false,
          "ai": true
        },
        "optimization": {
          "performance": true,
          "security": true,
          "scalability": true,
          "maintainability": true
        }
      },

      "completion": {
        "enabled": true,
        "validation": {
          "tests": true,
          "linting": true,
          "typeCheck": true,
          "security": true,
          "performance": true
        },
        "documentation": {
          "code": true,
          "api": true,
          "user": true,
          "deployment": true
        }
      }
    },

    "automation": {
      "enabled": true,
      "parallelTasks": true,
      "maxConcurrency": 5,
      "retryPolicy": {
        "attempts": 3,
        "backoff": "exponential",
        "maxDelay": 10000
      },
      "monitoring": {
        "progress": true,
        "metrics": true,
        "logging": "verbose"
      }
    },

    "testDrivenDevelopment": {
      "enabled": true,
      "coverage": {
        "target": 90,
        "branches": 85,
        "functions": 90,
        "lines": 90,
        "statements": 90
      },
      "types": {
        "unit": true,
        "integration": true,
        "e2e": true,
        "performance": true,
        "security": true
      },
      "frameworks": {
        "unit": "jest",
        "e2e": "playwright",
        "performance": "k6",
        "security": "owasp-zap"
      }
    }
  },

  "firebase": {
    "projectId": "my-rms-validator",
    "adminProjectId": "kolabai-project",
    "emulators": {
      "enabled": true,
      "auth": { "port": 9099 },
      "firestore": { "port": 8080 },
      "storage": { "port": 9199 },
      "ui": { "port": 4000 }
    },
    "security": {
      "rules": {
        "firestore": "firestore.rules",
        "storage": "storage.rules"
      },
      "indexes": "firestore.indexes.json"
    }
  },

  "agents": {
    "coordination": {
      "enabled": true,
      "path": "coordination",
      "multiAgent": true,
      "roles": {
        "security": {
          "priority": "critical",
          "vetoRights": true,
          "responsibilities": [
            "authentication",
            "authorization",
            "encryption",
            "vulnerability-scanning",
            "compliance"
          ]
        },
        "architecture": {
          "priority": "high",
          "responsibilities": [
            "system-design",
            "api-contracts",
            "database-schema",
            "integration-patterns",
            "scalability"
          ]
        },
        "frontend": {
          "priority": "high",
          "responsibilities": [
            "react-components",
            "state-management",
            "ui-ux",
            "accessibility",
            "responsive-design"
          ]
        },
        "backend": {
          "priority": "high",
          "responsibilities": [
            "api-endpoints",
            "business-logic",
            "data-processing",
            "pdf-parsing",
            "ai-integration"
          ]
        },
        "testing": {
          "priority": "high",
          "responsibilities": [
            "test-strategy",
            "test-implementation",
            "coverage-monitoring",
            "performance-testing",
            "security-testing"
          ]
        },
        "devops": {
          "priority": "medium",
          "responsibilities": [
            "ci-cd",
            "deployment",
            "monitoring",
            "infrastructure",
            "performance-optimization"
          ]
        }
      }
    }
  },

  "features": {
    "resumeParsing": {
      "ai": {
        "models": ["gemini-2.0-flash", "ollama-llama3.1"],
        "fallback": true,
        "caching": true
      },
      "formats": ["pdf", "docx", "txt"],
      "standards": {
        "rms": {
          "version": "2.0.1",
          "compliance": "strict",
          "validation": true,
          "exiftool": {
            "path": "C:\\Users\\ashto\\OneDrive\\ExifTool\\exiftool.exe",
            "config": "./config/exiftool/rms-config.pl"
          }
        }
      }
    },

    "atsOptimization": {
      "scoring": {
        "algorithm": "weighted",
        "criteria": {
          "formatting": 25,
          "keywords": 25,
          "structure": 25,
          "readability": 25
        }
      },
      "suggestions": {
        "categories": ["formatting", "content", "keywords", "structure"],
        "severity": ["critical", "high", "medium", "low"],
        "examples": true
      }
    },

    "pdfGeneration": {
      "engines": ["jspdf", "puppeteer"],
      "templates": {
        "styles": ["elegant", "modern", "classic", "professional"],
        "fonts": ["merriweather", "helvetica", "times"],
        "customFonts": true
      },
      "metadata": {
        "rms": true,
        "standard": true
      }
    }
  },

  "development": {
    "environment": {
      "node": ">=16.0.0",
      "npm": ">=8.0.0",
      "typescript": "^4.9.5"
    },
    "conventions": {
      "naming": "camelCase",
      "files": "kebab-case",
      "components": "PascalCase",
      "constants": "UPPER_SNAKE_CASE"
    },
    "quality": {
      "linting": {
        "enabled": true,
        "config": ".eslintrc.json",
        "autoFix": true
      },
      "formatting": {
        "enabled": true,
        "config": ".prettierrc",
        "onSave": true
      },
      "typeChecking": {
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true
      }
    }
  },

  "deployment": {
    "environments": {
      "development": {
        "url": "http://localhost:3000",
        "firebase": "dev",
        "features": {
          "debug": true,
          "emulators": true,
          "hotReload": true
        }
      },
      "staging": {
        "url": "https://staging.hirable-ai.com",
        "firebase": "staging",
        "features": {
          "debug": false,
          "emulators": false,
          "monitoring": true
        }
      },
      "production": {
        "url": "https://hirable-ai.com",
        "firebase": "production",
        "features": {
          "debug": false,
          "emulators": false,
          "monitoring": true,
          "analytics": true
        }
      }
    },
    "vercel": {
      "enabled": true,
      "config": "vercel.json",
      "regions": ["iad1"],
      "functions": {
        "maxDuration": 300,
        "memory": 1024
      }
    }
  },

  "monitoring": {
    "logging": {
      "level": "info",
      "destinations": ["console", "file", "cloud"],
      "rotation": {
        "enabled": true,
        "maxSize": "10MB",
        "maxFiles": 10
      }
    },
    "metrics": {
      "collection": true,
      "interval": 60,
      "retention": "30d"
    },
    "alerts": {
      "enabled": true,
      "channels": ["email", "slack"],
      "rules": {
        "errorRate": { "threshold": 0.05, "window": "5m" },
        "responseTime": { "threshold": 2000, "window": "5m" },
        "cpuUsage": { "threshold": 0.8, "window": "10m" },
        "memoryUsage": { "threshold": 0.85, "window": "10m" }
      }
    }
  },

  "security": {
    "authentication": {
      "providers": ["email", "google", "github"],
      "mfa": false,
      "sessionTimeout": "14d"
    },
    "authorization": {
      "model": "rbac",
      "roles": ["user", "premium", "admin"],
      "permissions": {
        "user": ["read:own", "write:own"],
        "premium": ["read:own", "write:own", "ai:advanced"],
        "admin": ["read:all", "write:all", "admin:all"]
      }
    },
    "encryption": {
      "atRest": true,
      "inTransit": true,
      "algorithm": "AES-256-GCM"
    },
    "compliance": {
      "gdpr": true,
      "ccpa": true,
      "soc2": false
    },
    "scanning": {
      "dependencies": true,
      "code": true,
      "containers": false,
      "frequency": "daily"
    }
  },

  "performance": {
    "targets": {
      "ttfb": 200,
      "fcp": 1000,
      "lcp": 2500,
      "cls": 0.1,
      "fid": 100
    },
    "optimization": {
      "bundleAnalysis": true,
      "codeSpitting": true,
      "lazyLoading": true,
      "caching": {
        "browser": true,
        "cdn": true,
        "redis": true
      }
    },
    "benchmarking": {
      "enabled": true,
      "frequency": "weekly",
      "lighthouse": true,
      "webVitals": true
    }
  },

  "customCommands": {
    "enabled": true,
    "path": ".claude/commands",
    "scripts": {
      "quickStart": "quick-start.sh",
      "deploy": "deploy.sh",
      "test": "run-tests.sh",
      "security": "security-check.sh"
    }
  },

  "workflows": {
    "feature": {
      "steps": [
        "specification",
        "architecture",
        "pseudocode",
        "implementation",
        "testing",
        "documentation",
        "review",
        "deployment"
      ],
      "automation": true,
      "approval": ["architecture", "security"]
    },
    "bugfix": {
      "steps": [
        "reproduction",
        "diagnosis",
        "implementation",
        "testing",
        "verification"
      ],
      "automation": true,
      "fastTrack": true
    },
    "release": {
      "steps": [
        "changelog",
        "version-bump",
        "build",
        "test",
        "security-scan",
        "deploy-staging",
        "smoke-test",
        "deploy-production",
        "monitor"
      ],
      "automation": true,
      "approval": ["security", "devops"]
    }
  }
}